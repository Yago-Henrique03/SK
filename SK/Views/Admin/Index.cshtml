
@{
    ViewBag.Title = "Index";
    <link href="~/Content/_AdminIndex.css" rel="stylesheet" type="text/css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
}

<h2 class="Title">Cadastrar produto</h2>

<form method="post" class="formulary" onsubmit="newProduct.enviaDados(event)">
    
    <div>
        <label for="Nome_Produto">Nome da skin</label>
        <input id="Nome_Produto" name="Nome_Produto" type="text" placeholder="Insira o nome..." />
    </div>

    <div>
        <lable for="Preco">Preço</lable>
        <input id="Preco" name="Preco" data-type="money" placeholder="Insira o valor..." />
    </div>

    <div>
        <label for="ImageUrl">Url da Imagem</label>
        <input id="ImageUrl" onchange="ImageChange()" name="ImageUrl" type="text" placeholder="http://steamcommunity..." />
    </div>

    <select name="Tipo" id="Tipo">
        <option>Selecione um Tipo</option>
        <option value="facas">Facas</option>
        <option>SMG</option>
        <option>Agente</option>
        <option>Pistolas</option>
        <option>Rifles</option>
    </select>

    <img src="" id="imgToShow" />

    <input type="submit" value="Adicionar +" />
</form>

<script src="~/scripts/_NewProduct.js"></script>
<script>
    newProduct.init({
        urls: {
            newProductRoute: '@Url.Action("Post", "Admin")',
        },
    });

    function ImageChange() {
        let value = $("#ImageUrl").val();
        $("#imgToShow").attr("src", value);
    }

</script>